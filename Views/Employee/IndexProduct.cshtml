@model IEnumerable<MUHAMMED_ZIA_DESAI.ST10051670.POE.Models.Product>

@{
    ViewData["Title"] = "Product Index";
}

<h2>Products</h2>

<form asp-action="IndexProduct" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label>Category:</label>
        <select id="Category" name="Category" class="form-control" required>
            <option value="">-- Select Category --</option>
            <option value="Dairy">Dairy</option>
            <option value="Grains">Grains</option>
            <option value="Fruits">Fruits</option>
            <option value="Vegetables">Vegetables</option>
            <option value="Seeds">Seeds</option>
            <option value="Wool">Wool</option>
            <option value="Honey">Honey</option>
            <option value="Egg">Egg</option>
            <option value="Meat">Meat</option>
        </select>
    </div>
    <div class="col-md-3">
        <label>Start Date:</label>
        <input type="date" name="startDate" class="form-control" />
    </div>
    <div class="col-md-3">
        <label>End Date:</label>
        <input type="date" name="endDate" class="form-control" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Production Date</th>
            <th>User ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@($"R {product.Price:0.00}")</td>
                <td>@product.Quantity</td>
                <td>@product.ProductionDate.ToString("dd-MM-yyyy")</td>
                <td>@product.UserId</td>
            </tr>
        }
    </tbody>
</table>
