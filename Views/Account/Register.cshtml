@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            function toggleFieldsBasedOnRole() {
                var selectedRole = $('#roleDropdown').val();
                if (selectedRole === 'Farmer') {
                    $('#phoneField').show();
                    $('#locationField').show();
                } else {
                    $('#phoneField').hide();
                    $('#locationField').hide();
                }
            }

            toggleFieldsBasedOnRole();

            $('#roleDropdown').change(function () {
                toggleFieldsBasedOnRole();
            });
        });
